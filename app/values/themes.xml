<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Основная тема приложения -->
    <style name="Theme.KettBing" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <!-- Прозрачность системных баров -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Поддержка вырезов (display cutout) -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- Кастомный шрифт -->
        <item name="android:fontFamily">@font/lalezar</item>
    </style>

    <!-- Тема для LauncherActivity -->
    <style name="Theme.KettBing.Launch" parent="Theme.KettBing">
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

    <!-- Тема для SplashActivity -->
    <style name="Theme.KettBing.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:windowFullscreen">true</item>

        <!-- Добавлено для корректной отрисовки под вырезом -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>
